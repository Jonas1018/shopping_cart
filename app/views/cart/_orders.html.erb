<% @cart.orders.each do |order| %>
    <% product = order.product %>
    <div id="<%= "cart-#{product.id}" %>">
        <div style="display:flex;justify-content:space-between;margin: 0em 5em;">
            <strong>Name:</strong>
            <%= product.name %>
            <strong>Description:</strong>
            <%= product.description %>
            <strong>Price:</strong>
            <%= product.price %>

        <p>
            <%= form_with(url: cart_minusOne_path) do |f| %>
                <%= f.hidden_field :id, value: product.id %>
                <%= f.hidden_field :quantity, value: order.quantity, min: 0 %>
                <%= f.submit "-" %>
            <% end %>

            <%= form_with(url: cart_plusOne_path) do |f| %>
                <%= f.hidden_field :id, value: product.id %>
                <%= f.text_field :quantity, value: order.quantity, min: 0 %>
                <%= f.submit "+" %>
            <% end %>
            

            <%= form_with(url: cart_remove_path) do |f| %>
                <%= f.hidden_field :id, value: order.id %>
                <%= f.submit "X" %>
            <% end %>
            <strong>Total:</strong>
            <%= order.total %>
        </div>
    </div>
<% end %>
